generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Farmer {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String   @unique
  farmName       String
  location       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  clerkId        String   @unique
  acreage        String   @default("")
  batches        Int      @default(0)
  bio            String   @default("")
  certifications String[] @default([])
  gallery        String[] @default([])
  image          String   @default("")
  lastHarvest    DateTime @default(now())
  methods        String[] @default([])
  rating         Float    @default(0.0)
  region         String   @default("")
  since          Int      @default(2000)
  crops          Crop[]
}

model Crop {
  id          Int         @id @default(autoincrement())
  name        String
  variety     String
  quantity    Float
  unit        String
  plantedAt   DateTime
  harvestedAt DateTime?
  farmerId    Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  farmer      Farmer      @relation(fields: [farmerId], references: [id])
  Inventory   Inventory[]
  orders      Order[]
}

model Distributor {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String   @unique
  company   String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clerkId   String   @unique
  orders    Order[]
}

model Order {
  id            Int         @id @default(autoincrement())
  orderNumber   String      @unique
  cropId        Int
  distributorId Int
  quantity      Float
  unit          String
  orderDate     DateTime    @default(now())
  deliveryDate  DateTime?
  status        String      @default("PENDING")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  Logistics     Logistics[]
  crop          Crop        @relation(fields: [cropId], references: [id])
  distributor   Distributor @relation(fields: [distributorId], references: [id])
}

model Logistics {
  id            Int       @id @default(autoincrement())
  orderId       Int
  vehicleNumber String
  driverName    String
  driverContact String
  status        String    @default("IN_TRANSIT")
  pickupDate    DateTime
  deliveryDate  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  order         Order     @relation(fields: [orderId], references: [id])
}

model Retailer {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  phone     String      @unique
  storeName String
  location  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  clerkId   String      @unique
  Inventory Inventory[]
}

model Inventory {
  id         Int      @id @default(autoincrement())
  cropId     Int
  retailerId Int
  quantity   Float
  unit       String
  addedAt    DateTime @default(now())
  updatedAt  DateTime @updatedAt
  crop       Crop     @relation(fields: [cropId], references: [id])
  retailer   Retailer @relation(fields: [retailerId], references: [id])
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String   @unique
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clerkId   String   @unique
}
